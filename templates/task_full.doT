<h2>{{=it.task.title}}</h2>

<div id="task_description">
	type: {{=it.task.type}}<br />
	project: {{=it.project.title}}<br />
	priority: {{=it.task.priority}}<br />
	created: {{=it.task.created}}<br />
	status: {{=it.task.status}}<br />
	<br />
	<div class="comment">
		{{? typeof it.comments[0] !== 'undefined'}}
		{{=it.comments[0].text}}
		{{?}}
	</div>
</div>